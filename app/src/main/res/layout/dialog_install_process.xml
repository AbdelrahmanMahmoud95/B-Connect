<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"

        >

        <Button
            android:id="@+id/instal_setup_bt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
             android:text="تم تركيب العميل"
            android:textColor="#ffff"
            android:textSize="25dp" />


        <Button
            android:id="@+id/instal_tran_bt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="تم تدريب العميل"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:textSize="25dp" />
        <Button
            android:id="@+id/instal_get_dow_pay_bt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="تم تحصيل باقي التعاقد"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:textSize="25dp" />
        <Button
            android:id="@+id/instal_note_bt"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:drawableRight="@android:drawable/btn_star_big_on"
            android:text="إضافة ملاحظة"
            android:textColor="#ffff"
            android:layout_marginTop="10dp"
            android:textSize="25dp" />


    </LinearLayout>
</RelativeLayout>